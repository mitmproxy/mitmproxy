{{- $pages := slice -}}
{{- range .Site.RegularPages -}}
    {{- $sectionTitle := "" -}}
    {{- with .Site.GetPage (printf "/%s" .Section) -}}
        {{- $sectionTitle = .Title -}}
    {{- end -}}
    {{- $page := dict 
        "title" .Title
        "url" .RelPermalink
        "content" .Plain
        "section" $sectionTitle
    -}}
    {{- $pages = $pages | append $page -}}
{{- end -}}
{{ $pages | jsonify }}