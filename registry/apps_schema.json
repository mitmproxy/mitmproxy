{
  "version": "1.0.0",
  "apps": {
    "granola": {
      "name": "Granola",
      "vendor": "Granola",
      "vendor_url": "https://granola.ai",
      "category": "productivity",
      "platforms": [
        "macos",
        "windows",
        "linux"
      ],
      "signatures": {
        "macos": {
          "bundle_id": "com.granola.app",
          "team_id": "QZ7DHHLN25"
        },
        "windows": {
          "exe": "Granola.exe",
          "publisher": "Granola"
        },
        "linux": {
          "exe": "granola"
        }
      },
      "ai": "native",
      "icon": "granola.png",
      "api_domains": [
        "stream.api.granola.ai",
        "api.granola.ai",
        "*.granola.ai"
      ],
      "features": {
        "chat": {
          "type": "chat",
          "name": "Chat Conversation",
          "description": "Chat with the ChatGPT API",
          "patterns": [
            {
              "url": "**/backend-api/conversation",
              "method": "POST"
            }
          ],
          "parser": {
            "request": {
              "model": "model",
              "messages": "messages.({'role': author.role, 'content': $join(content.parts)})"
            },
            "response": {
              "stream": {
                "format": "sse",
                "format_options": {
                  "prefixes": [
                    "data: ",
                    "delta ",
                    "message "
                  ],
                  "skip_values": [
                    "[DONE]",
                    "delta_encoding v1",
                    "delta_encoding v2",
                    "v1",
                    "v2"
                  ]
                },
                "rules": [
                  {
                    "when": "type = 'server_ste_metadata'",
                    "extract": {
                      "model": "metadata.model_slug"
                    }
                  },
                  {
                    "when": "$exists(v) and $not($exists(o)) and $not($exists(p)) and $type(v) = 'string'",
                    "extract": {
                      "content": "v"
                    }
                  },
                  {
                    "when": "o = 'append' and $exists(v) and $type(v) = 'string'",
                    "extract": {
                      "content": "v"
                    }
                  },
                  {
                    "when": "$exists(choices[0].delta.content)",
                    "extract": {
                      "content": "choices[0].delta.content"
                    }
                  }
                ],
                "accumulate": {
                  "content": {
                    "from": "content",
                    "op": "concat"
                  },
                  "model": {
                    "from": "model",
                    "op": "first"
                  }
                },
                "finalize": {
                  "content": "accumulated.content",
                  "model": "accumulated.model"
                }
              }
            }
          }
        },
        "code_gen_api": {
          "type": "code_gen",
          "name": "Code Generation",
          "description": "Generates code, commands, and scripts based on prompts.",
          "patterns": [
            {
              "url": "**/backend-api/conversation",
              "method": "POST"
            }
          ]
        },
        "asset_creation": {
          "type": "asset_creation",
          "name": "Asset Creation",
          "description": "Creates media and document assets using generative models.",
          "patterns": [
            {
              "url": "**/backend-api/generate/image",
              "method": "POST"
            },
            {
              "url": "**/backend-api/generate/video",
              "method": "POST"
            },
            {
              "url": "**/backend-api/generate/audio",
              "method": "POST"
            }
          ]
        },
        "platform_output": {
          "type": "platform output",
          "name": "Platform Output Integration",
          "description": "Integrates outputs with different platforms and apps.",
          "patterns": [
            {
              "url": "**/integration/platform-output",
              "method": "POST"
            }
          ]
        },
        "summarise_api": {
          "type": "text manipulation",
          "name": "Text Manipulation",
          "description": "Performs manipulations such as summarizing, explaining, shortening, or rewriting text.",
          "patterns": [
            {
              "url": "**/backend-api/text-manipulate",
              "method": "POST"
            }
          ]
        },
        "other": {
          "type": "other",
          "name": "Miscellaneous Feature",
          "description": "Other or experimental feature types."
        }
      },
      "pricing": {
        "model": [
          "subscription"
        ],
        "tiers": [
          {
            "id": "free",
            "name": "Free",
            "type": "free",
            "monthly_usd": 0
          },
          {
            "id": "plus",
            "name": "Plus",
            "type": "individual",
            "monthly_usd": 20
          },
          {
            "id": "pro",
            "name": "Pro",
            "type": "individual",
            "monthly_usd": 200
          },
          {
            "id": "team",
            "name": "Team",
            "type": "team",
            "monthly_usd": 25
          }
        ]
      },
      "detection": {
        "subscription": [
          {
            "type": "api_response",
            "url": "**/v1/get-workspaces",
            "extract": {
              "plan_type": "$.workspaces[0].plan_type",
              "role": "$.workspaces[0].role"
            }
          }
        ]
      }
    }
  }
}