# =============================================================================
# Oximy Production Build Credentials
# =============================================================================
# Copy this file to .env.local and fill in your credentials:
#   cp .env.local.example .env.local
#
# Then source it before running the build:
#   source .env.local && ./build-prod.sh mac --version 1.0.0
# =============================================================================

# -----------------------------------------------------------------------------
# macOS Code Signing & Notarization (Required for macOS builds)
# -----------------------------------------------------------------------------

# Your Developer ID certificate name (find with: security find-identity -v -p codesigning)
export DEVELOPER_ID="Developer ID Application: Oximy, Inc. (K6H6LCASRA)"

# Apple ID for notarization (your Apple Developer account email)
export APPLE_ID="your-email@example.com"

# App-specific password for notarization
# Generate at: https://appleid.apple.com/account/manage > Sign-In and Security > App-Specific Passwords
export APPLE_APP_PASSWORD="xxxx-xxxx-xxxx-xxxx"

# Your Apple Team ID (same as in your Developer ID, e.g., K6H6LCASRA)
export TEAM_ID="K6H6LCASRA"

# -----------------------------------------------------------------------------
# Sparkle Auto-Update Signing (Optional but recommended)
# -----------------------------------------------------------------------------
# Generate keys with: ./OximyMac/.build/artifacts/sparkle/Sparkle/bin/generate_keys
# Or download Sparkle and use the generate_keys tool

# EdDSA private key for signing DMG (base64 encoded)
export SPARKLE_PRIVATE_KEY=""

# EdDSA public key for Info.plist (base64 encoded)
export SPARKLE_PUBLIC_KEY=""

# -----------------------------------------------------------------------------
# Sentry Crash Reporting (Optional)
# -----------------------------------------------------------------------------
# Your Sentry DSN for crash reporting
export SENTRY_DSN=""

# -----------------------------------------------------------------------------
# Windows (No special credentials needed for local builds)
# -----------------------------------------------------------------------------
# Windows builds use Velopack which doesn't require signing for local testing.
# For production releases, you may want to add code signing later.
