{
  "output": {
    "directory": "~/.oximy/traces",
    "filename_pattern": "traces_{date}.jsonl"
  },
  "api_base_url": "https://api.oximy.com/api/v1",
  "sensor_config_cache": "~/.oximy/sensor-config.json",
  "config_refresh_interval_seconds": 1800,
  "upload": {
    "state_file": "~/.oximy/upload-state.json",
    "force_sync_trigger": "~/.oximy/force-sync",
    "batch_size": 500,
    "interval_seconds": 3,
    "threshold_count": 100
  }
}
