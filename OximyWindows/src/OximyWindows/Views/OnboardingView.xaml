<UserControl x:Class="OximyWindows.Views.OnboardingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="480" d:DesignWidth="380">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Page Content -->
        <StackPanel Grid.Row="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="32">

            <!-- Logo/Icon -->
            <Image Source="/Assets/oximy.png"
                   Width="80" Height="80"
                   Margin="0,0,0,24"/>

            <!-- Title -->
            <TextBlock x:Name="TitleText"
                       Text="Welcome to Oximy"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"/>

            <!-- Subtitle -->
            <TextBlock x:Name="SubtitleText"
                       Text="Monitor and analyze your AI API usage across all applications."
                       FontSize="14"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       MaxWidth="280"
                       Margin="0,12,0,0"/>
        </StackPanel>

        <!-- Page Indicators -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20">
            <Ellipse x:Name="Indicator1" Width="8" Height="8" Margin="4,0" Fill="{DynamicResource AccentBrush}"/>
            <Ellipse x:Name="Indicator2" Width="8" Height="8" Margin="4,0" Fill="{DynamicResource BorderBrush}"/>
            <Ellipse x:Name="Indicator3" Width="8" Height="8" Margin="4,0" Fill="{DynamicResource BorderBrush}"/>
        </StackPanel>

        <!-- Navigation Buttons -->
        <Grid Grid.Row="2" Margin="24,0,24,24">
            <Button x:Name="BackButton"
                    Content="Back"
                    HorizontalAlignment="Left"
                    Style="{DynamicResource LinkButtonStyle}"
                    Visibility="Collapsed"
                    Click="BackButton_Click"/>

            <Button x:Name="NextButton"
                    Content="Next"
                    HorizontalAlignment="Right"
                    Style="{DynamicResource PrimaryButtonStyle}"
                    Click="NextButton_Click"/>
        </Grid>
    </Grid>
</UserControl>
