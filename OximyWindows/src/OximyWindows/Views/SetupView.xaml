<UserControl x:Class="OximyWindows.Views.SetupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignWidth="320" d:DesignHeight="350"
             Background="#1A1A2E">

    <UserControl.Resources>
        <!-- Step Button Style -->
        <Style x:Key="StepButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12"
                                Padding="16">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2D2D44"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6C63FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5B54E6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#4A4A6A"/>
                                <Setter Property="Foreground" Value="#8A8AAA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Link Button Style -->
        <Style x:Key="LinkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#9999AA"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="{TemplateBinding Content}"
                                   Foreground="{TemplateBinding Foreground}"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#BBBBCC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Progress Indicator (2 steps: enrollment complete, setup current) -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,24">
            <Ellipse Width="10" Height="10" Fill="#4CAF50"/>
            <Rectangle Width="40" Height="2" Fill="#6C63FF" Margin="8,0"/>
            <Ellipse Width="10" Height="10" Fill="#6C63FF"/>
        </StackPanel>

        <!-- Title -->
        <TextBlock Grid.Row="1"
                   Text="Set Up Oximy"
                   FontSize="22"
                   FontWeight="SemiBold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,8"/>

        <!-- Subtitle -->
        <TextBlock Grid.Row="2"
                   Text="Install the certificate to start monitoring"
                   FontSize="13"
                   Foreground="#9999AA"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"
                   TextAlignment="Center"
                   Margin="0,0,0,24"/>

        <!-- Step 1: Install Certificate -->
        <Button Grid.Row="3"
                x:Name="CertificateButton"
                Style="{StaticResource StepButtonStyle}"
                Click="OnInstallCertificateClick"
                Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Step Number / Checkmark -->
                <Border Grid.Column="0"
                        x:Name="CertificateStepBorder"
                        Width="32" Height="32"
                        CornerRadius="16"
                        Background="#3D3D5C"
                        HorizontalAlignment="Left">
                    <TextBlock x:Name="CertificateStepText"
                               Text="1"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>

                <!-- Step Info -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0,0,0">
                    <TextBlock Text="Install Certificate"
                               FontSize="15"
                               FontWeight="SemiBold"
                               Foreground="White"/>
                    <TextBlock Text="Required to capture HTTPS traffic"
                               FontSize="12"
                               Foreground="#9999AA"
                               Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Arrow / Loading / Check -->
                <TextBlock Grid.Column="2"
                           x:Name="CertificateArrow"
                           Text=">"
                           FontSize="18"
                           Foreground="#6C63FF"
                           VerticalAlignment="Center"/>
                <TextBlock Grid.Column="2"
                           x:Name="CertificateLoading"
                           Text="..."
                           FontSize="18"
                           Foreground="#9999AA"
                           VerticalAlignment="Center"
                           Visibility="Collapsed"/>
            </Grid>
        </Button>

        <!-- Error Message -->
        <Border Grid.Row="4" Height="40">
            <TextBlock x:Name="ErrorText"
                       FontSize="13"
                       Foreground="#FF6B6B"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Visibility="Collapsed"/>
        </Border>

        <!-- Continue Button -->
        <Button Grid.Row="5"
                x:Name="StartButton"
                Content="Continue"
                Style="{StaticResource PrimaryButtonStyle}"
                Click="OnStartMonitoringClick"
                IsEnabled="False"
                HorizontalAlignment="Center"
                MinWidth="200"/>

        <!-- Skip Link -->
        <Button Grid.Row="7"
                Content="Set up later"
                Style="{StaticResource LinkButtonStyle}"
                Click="OnSkipClick"
                HorizontalAlignment="Center"
                Margin="0,0,0,8"/>
    </Grid>
</UserControl>
