<UserControl x:Class="OximyWindows.Views.EnrollmentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignWidth="320" d:DesignHeight="420"
             Background="#1A1A2E">

    <UserControl.Resources>
        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6C63FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5B54E6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#4A4A6A"/>
                                <Setter Property="Foreground" Value="#8A8AAA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Link Button Style -->
        <Style x:Key="LinkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#6C63FF"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="{TemplateBinding Content}"
                                   Foreground="{TemplateBinding Foreground}"
                                   TextDecorations="Underline"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#8B84FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Step Number Style -->
        <Style x:Key="StepNumberStyle" TargetType="Border">
            <Setter Property="Width" Value="22"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="Background" Value="#6C63FF"/>
            <Setter Property="CornerRadius" Value="11"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Progress Indicator -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Ellipse Width="10" Height="10" Fill="#6C63FF"/>
            <Rectangle Width="40" Height="2" Fill="#3D3D5C" Margin="8,0"/>
            <Ellipse Width="10" Height="10" Fill="#3D3D5C"/>
        </StackPanel>

        <!-- Title -->
        <TextBlock Grid.Row="1"
                   Text="Connect to Workspace"
                   FontSize="22"
                   FontWeight="SemiBold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,8"/>

        <!-- Instructions Panel -->
        <Border Grid.Row="2" Background="#6C63FF" Opacity="0.15" CornerRadius="10" Margin="0,12,0,0">
            <Border Background="Transparent" Padding="12">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE774;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                               Foreground="#6C63FF" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <StackPanel>
                        <TextBlock Text="Sign in with your browser" FontSize="13" FontWeight="Medium" Foreground="White"/>
                        <TextBlock Text="You'll be redirected to authenticate" FontSize="11" Foreground="#9999AA"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>

        <!-- How it works -->
        <Border Grid.Row="3" Background="#2D2D44" CornerRadius="10" Margin="0,16,0,0" Padding="16">
            <StackPanel>
                <TextBlock Text="How it works:" FontSize="12" FontWeight="SemiBold" Foreground="#9999AA" Margin="0,0,0,12"/>

                <!-- Step 1 -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Border Style="{StaticResource StepNumberStyle}">
                        <TextBlock Text="1" FontSize="11" FontWeight="Bold" Foreground="White"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Click the button below to open your browser"
                               FontSize="12" Foreground="#9999AA" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Step 2 -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Border Style="{StaticResource StepNumberStyle}">
                        <TextBlock Text="2" FontSize="11" FontWeight="Bold" Foreground="White"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Enter your 6-digit code on the web page"
                               FontSize="12" Foreground="#9999AA" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Step 3 -->
                <StackPanel Orientation="Horizontal">
                    <Border Style="{StaticResource StepNumberStyle}">
                        <TextBlock Text="3" FontSize="11" FontWeight="Bold" Foreground="White"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="You'll be automatically signed in here"
                               FontSize="12" Foreground="#9999AA" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Error Message (fixed height to prevent layout shifts) -->
        <Border Grid.Row="4" Height="40" Margin="0,8,0,0">
            <TextBlock x:Name="ErrorText"
                       FontSize="13"
                       Foreground="#FF6B6B"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Visibility="Collapsed"/>
        </Border>

        <!-- Login with Browser Button -->
        <Button Grid.Row="5"
                x:Name="LoginButton"
                Style="{StaticResource PrimaryButtonStyle}"
                Click="OnLoginWithBrowserClick"
                HorizontalAlignment="Center"
                MinWidth="220">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="ButtonIcon" Text="&#xE8A7;" FontFamily="Segoe MDL2 Assets"
                           FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock x:Name="ButtonText" Text="Login with Browser" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>

        <!-- Sign Up Link -->
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
            <TextBlock Text="Need an account? "
                       Foreground="#9999AA"
                       FontSize="13"
                       VerticalAlignment="Center"/>
            <Button Content="Sign up free"
                    Style="{StaticResource LinkButtonStyle}"
                    Click="OnSignUpClick"/>
        </StackPanel>
    </Grid>
</UserControl>
