<UserControl x:Class="OximyWindows.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="480" d:DesignWidth="380">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <StackPanel Grid.Row="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="32">

            <!-- Logo -->
            <Image Source="/Assets/oximy.png"
                   Width="64" Height="64"
                   Margin="0,0,0,24"/>

            <!-- Title -->
            <TextBlock Text="Enter Workspace Code"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       HorizontalAlignment="Center"/>

            <!-- Subtitle -->
            <TextBlock Text="Enter the 6-digit code from your workspace settings"
                       FontSize="13"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       MaxWidth="260"
                       Margin="0,8,0,24"/>

            <!-- 6-Digit Code Input -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,16">
                <TextBox x:Name="Digit1" Style="{DynamicResource DigitTextBoxStyle}" PreviewTextInput="Digit_PreviewTextInput" TextChanged="Digit_TextChanged"/>
                <TextBox x:Name="Digit2" Style="{DynamicResource DigitTextBoxStyle}" PreviewTextInput="Digit_PreviewTextInput" TextChanged="Digit_TextChanged"/>
                <TextBox x:Name="Digit3" Style="{DynamicResource DigitTextBoxStyle}" PreviewTextInput="Digit_PreviewTextInput" TextChanged="Digit_TextChanged"/>
                <TextBox x:Name="Digit4" Style="{DynamicResource DigitTextBoxStyle}" PreviewTextInput="Digit_PreviewTextInput" TextChanged="Digit_TextChanged"/>
                <TextBox x:Name="Digit5" Style="{DynamicResource DigitTextBoxStyle}" PreviewTextInput="Digit_PreviewTextInput" TextChanged="Digit_TextChanged"/>
                <TextBox x:Name="Digit6" Style="{DynamicResource DigitTextBoxStyle}" PreviewTextInput="Digit_PreviewTextInput" TextChanged="Digit_TextChanged"/>
            </StackPanel>

            <!-- Error Message -->
            <TextBlock x:Name="ErrorText"
                       Foreground="{DynamicResource ErrorBrush}"
                       FontSize="12"
                       TextAlignment="Center"
                       Margin="0,0,0,16"
                       Visibility="Collapsed"/>

            <!-- Loading Indicator -->
            <StackPanel x:Name="LoadingPanel"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Visibility="Collapsed">
                <ProgressBar IsIndeterminate="True"
                             Width="20" Height="20"/>
                <TextBlock Text="Verifying..."
                           FontSize="13"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           Margin="8,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <!-- Sign Up Link -->
        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,24">
            <TextBlock FontSize="13"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       HorizontalAlignment="Center">
                <Run Text="Don't have a workspace?"/>
                <Hyperlink x:Name="SignUpLink"
                           Foreground="{DynamicResource AccentBrush}"
                           Click="SignUpLink_Click">
                    Sign up
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>

    <UserControl.Resources>
        <!-- Digit TextBox Style -->
        <Style x:Key="DigitTextBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="MaxLength" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
</UserControl>
